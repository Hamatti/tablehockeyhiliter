{
  "manifest_version": 2,

  "name": "Table Hockey Hiliter",
  "description": "Highlights wanted players on results",
  "version": "1.2",

  "permissions": [
    "http://poytajaakiekko.net/tilastot/*",
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": ["jquery-2.1.1.min.js"],
      "matches": ["http://poytajaakiekko.net/tilastot/*"],
      "css": ["style.css"],
      "run_at": "document_start"
    }
  ],

  "options_page": "options.html"
}
