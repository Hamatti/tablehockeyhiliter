{
  "manifest_version": 2,

  "name": "Table Hockey Hiliter",
  "description": "Highlights wanted players on results",
  "version": "1.1",

  "permissions": [
    "http://poytajaakiekko.net/tilastot/*",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icon.png"
    // "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": ["jquery-2.1.1.min.js"],
      "matches": ["http://poytajaakiekko.net/tilastot/*"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ]
}